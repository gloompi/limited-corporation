@import '../../assets/styles/main'

.coininfo__wrap
  display: flex
  align-items: flex-start
  justify-content: space-between
  width: 100%

.display__wrap
  display: flex
  align-items: center
  justify-content: space-between
  flex-direction: column
  width: 33%
  min-height: 500px
  padding: 20px 0 0
  color: $white
  border-radius: 20px
  box-shadow(0px 7px 30px rgba(255, 42, 47,0.5))
  background: linear-gradient(-120deg, #fe510d 30%, #ffa500ba )
  z-index: 100

.navigate__wrap
  display: flex
  align-items: flex-start
  flex-direction: column
  width: 77%

.icon__wrap
  display: flex
  align-items: center
  justify-content: center
  width: 100px
  height: 100px
  background: #fe510d
  border-radius: 50%
  border: solid 2px #ffffff

.icon
  font-size 40px
  color: $white

.profit__percent
  Font(medium)
  font-size 35px
  color: $white
  line-height 35px
  margin-bottom 0

.coin__name
  Font()
  font-size 14px

.coin__content_wrap
  display: flex
  align-items: center
  flex-direction: column

.coin__content_title
  Font(medium)
  font-size: 16px
  
.coin__content_value
  Font(light)
  font-size 14px

.invest__btn
  Font(medium)
  display: flex
  align-items: center
  justify-content: center
  color: $white
  width 100%
  padding: 15px 0
  border: none
  border-top 1px solid rgba($white, .3)
  background-color transparent
  text-transform uppercase
  &:hover
    color: $orange
    border-top 1px solid $white

.navigate__wrap
  display: flex
  flex-direction: column
  width: 67%

.instruction__wrap
  display: flex
  align-items: flex-end
  padding: 10px 0 10px 100px

.instruction__title
  Font(light)
  display: flex
  flex-direction: column
  font-weight 200
  font-size 14px
  color: rgba($white, .9)
  margin-left 10px

.calc__wrap
  display: flex
  flex-direction: column
  width: 100%
  background-color $white
  border-radius(0 25px 25px 0)
  overflow: hidden

.tabs__list
  display flex
  align-items: center
  justify-content: space-between
  width: 100%
  height: 50px

.tab__item
  width: 20%
  height: 100%

.tab__btn
  display: flex
  align-items: center
  justify-content: center
  font-size 14px
  width: 100%
  height: 100%
  color: $txt
  svg 
    margin-right 5px
    margin-bottom 2px
  &.active
    color: $white
    background-color $orange

.calc__main
  padding: 25px

.input__wrap
  display: flex
  justify-content: space-between
  align-items: flex-end
  width: 100%

.input__container
  position: relative
  width: 100%

.info__title
  Font(light)
  font-size 14px
  color: $txt
  text-transform uppercase

.input__label
  width 100%

.input__itself
  Font(medium)
  font-size 20px
  width: 100%
  height: 60px
  padding: 15px
  color: $txt
  border 1px solid $red
  border-radius: 5px

.input__currency
  position: absolute
  right: 15px
  top: 50%
  transform: translateY(-50%)

.input__refresh
  position: absolute
  display flex
  align-items: center
  justify-content: center
  left: 0
  bottom: 0
  width: 25px
  height: 25px
  color $orange
  border 1px solid $red
  border-radius: 50%
  background-color $white
  transform: translateY(40%)
  &:hover
    color: $red

.info__list
  display: flex
  align-items: center
  justify-content: space-between
  flex-wrap: wrap
  width: 100%

.info__item
  width: 50%
  margin-top 20px

.info__item_top
  display: flex
  align-items: center
  padding-left 10px
  border-left: 2px solid $txt

.info__item_title
  Font(ligh)
  font-size 12px
  color: $black
  letter-spacing 1.3px
  margin-bottom -3px
  margin-right 10px
  text-transform uppercase

.info__item_value
  Font(light)
  font-size 30px
  color: $txt