@import '../../assets/styles/main'

.section__title
  margin-bottom 50px

.content__wrap
  position relative
  display flex
  align-items flex-start
  justify-content space-between
  width 100%

.content
  font-size 14px
  color: $txt
  width 70%
  margin-bottom 100px
  line-height 30px
  letter-spacing 1.5px

.documents__list
  display flex
  flex-direction column
  width 25%

.documents__item
  width 100%
  margin-bottom 25px
  &:last-child
    margin-bottom 0

.documents__link
  width 100%
  img 
    width: 100%

.modal__wrap
  position: fixed
  top 0
  left -9999px
  opacity 0
  width 100%
  height 100vh
  padding-top 50px
  overflow: scroll
  background-color: rgba($black, .5)
  z-index 1000
  transition(.3s opacity)
  &.active
    left: 0
    opacity 1
  .modal__pic
    display flex
    align-items: center
    justify-content center
  img 
    margin: 50px 0
    min-height 80%
  a
    position: absolute
    right 15px
    top: 15px
    font-size 25px
    color $white