@import '../../assets/styles/main'

.section__title
  margin-bottom 50px

.contacts__wrap
  display flex
  align-items: center
  justify-content: space-between
  flex-wrap: wrap
  width 100%
  margin-bottom 100px

.contacts__container
  display flex
  align-items: flex-start
  flex-direction: column
  width: 55%
  margin-bottom 50px

.contacts__title
  Font(medium)
  font-size 25px
  color: $red
  margin-bottom 20px

.contacts__descr
  font-size 15px
  color: $txt
  line-height 30px
  margin-bottom 20px

.contacts__item_wrap
  display flex
  align-items: flex-start
  margin-bottom 20px
  svg 
    color: $orange
    margin-top 5px
    margin-right 10px

.contacts__item_title
  font-size 18px
  color: $red

.contacts__item_info
  font-size 14px
  color: $txt
  p
    margin-bottom 10px

.contacts__form
  display flex
  align-items: flex-start
  flex-direction: column
  width 39%

.contacts__form_title
  font-size 25px
  color: $red
  margin-bottom 25px

.contacts__form_input
  width 100%
  height: 50px
  padding-left 15px
  border-radius: 5px
  border none
  background-color $bg
  margin-bottom 25px

.contacts__form_textarea
  width 100%
  height: 150px
  padding-top 15px
  padding-left 15px
  border-radius: 5px
  border none
  background-color $bg
  margin-bottom 25px

.contacts__form_btn
  padding: 7px 25px
  color: $white
  background-color $red
  border-radius: 5px
  border none
  margin 0 auto
  &:hover
    background-color $orange

.footer__top_contacts
  display flex
  flex-direction: column
  font-size 11px
  color $red
  b
    font-size 15px
    color: $orange