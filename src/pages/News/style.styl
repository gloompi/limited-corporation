@import '../../assets/styles/main'
  
.news__list
  display flex
  justify-content: space-between
  flex-wrap: wrap
  width 100%
  margin-bottom 50px

.news__item
  width 49%
  max-height: 350px
  margin-bottom 25px

.news__link
  position: relative
  display flex
  align-items: center
  justify-content: center
  flex-direction: column
  width 100%
  height: 100%
  border-radius: 25px
  overflow: hidden
  img 
    width 100%
  &:after
    content: ""
    position: absolute
    left: 0
    top 0
    width 100%
    height: 100%
    background-color rgba($black, .8)
  &:hover
    .news__descr
      top: 0

.news__title
  position: absolute
  font-size 25px
  color: $white
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  z-index: 100

.news__descr
  position: absolute
  display: flex
  align-items: flex-start
  justify-content: center
  width 100%
  height: 100%
  color: $white
  background: linear-gradient(45deg, $red 50%, $orange)
  padding: 25px
  text-align: center
  top: 100%
  left: 0
  overflow: hidden
  transition(.3s top)
  z-index: 200